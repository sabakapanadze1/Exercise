/* 1. მოცემულია მთელი დადებითი რიცხვი n. result ცვლადში
    მოვათავსოთ მოცემული რიცხვის შემდეგ მდგომი ლუწი რიცხვი
    Input
        2
    Output
        4
    Input
        7
    Output
        8 
*/ 

{
   int n;
   int final;
   int result;
   
    n = 5
    result = n % 2;
    
    final = (n - result) + 2  

}

/* 2. N მოსწავლე იყოფს K ვაშლს თანაბრად. მორჩენილი ვაშლები რჩება ისევ კალათაში.
   რამდენი ვაშლი შეხვდება თითოეულ მოსწავლეს?
   Input Data
   პროგრამა იღებს ორ მთელ რიცხვს N და K
   Output Data
   აღვწეროთ ცვლადი result და მოვათავსოთ ვაშლების რაოდენოა
   მაგალითები:
   Input
       3
       14
   Output
       4
*/
{ 
   int N;
   int K;
   int result;
   
   N = 2;
   K = 7;
   result = K / N
   
 }
 
 /*  3. N მოსწავლე იყოფს K ვაშლს თანაბრად. მორჩენილი ვაშლები რჩება ისევ კალათაში.
     რამდენი ვაშლი დარჩება კალათაში?
     Input Data
     პროგრამა იღებს ორ მთელ რიცხვს N და K
     Output Data
     აღვწეროთ ცვლადი result და მოვათავსოთ ვაშლების რაოდენოა
     მაგალითები:
     Input
         3
         14
     Output
         2
 */
 
 { 
     int N;
     int K;
     int result;
     
     N = 3
     K = 8
     result = K % N
 }
/*  4. მოცემულია 3 ნიშნა რიცხვი. გამოვყოთ მისი ათეულების ციფრი.
       127  |  2
*/
     
{ 
   int a;
   int result1;
   int result;
   
   a = 138;
   result1 = (138 % 100);
   result = (38 / 10);



}
/*  5. მოცემულია 4 ნიშნა რიცხვი. დავთვალოთ მისი ციფრების ჯამი.
      1234 |  10
*/

{ 
  int num;
  int ab;
  int AB;
  int cd;
  int CD;
  int ABCD;
  
  
  
  num = 2345;
  ab = (num / 100);
  AB = (ab / 10) + (ab % 10);     
  cd = (num % 100);    
  CD = (cd / 10) + (cd % 10);
  ABCD = AB + CD;
   
   
   
   
}
/*
   6. მოცემულია 4 ნიშნა რიცხვი. დავთვალოთ მისი ლუწი ციფრების ჯამი.
     1234 |  6
*/
{ int num;
  int result;
  int result1;
  
  int num2;
  int ab;
  int AB;
  int = ABN;
  int cd;
  int CD;
  int CDN;
  int finish;
  
  num = 1234;
  ab = (num / 100);
  AB = (ab / 10);   
  ABN = (ab % 10);  
  cd = (num % 100);
  CD = (cd / 10);  
  CDN = (cd % 10);    
  
  num2 = 1;
  result = (AB,ABN,CD,CDN % 2);
  result1 = (num2 - result);
  finish = (result1 * AB) + (result1 * ABN) +(result1 * CD) + ( result 1 * CDN);
  
 
 
   

} 





